<html>
<title>Comic Cube</title>
<head>
  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- Compiled and minified CSS -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
 <!-- Compiled and minified JavaScript -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
 <script src="scripts/users.js"></script>
</head>
<body style="padding-left:5%; padding-right:5%;"">
<main>
  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo center">Comic Cube</a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li><a href="/profile">/profile</a></li>
        <li><a href="/boxes">/boxes</a></li>
      </ul>
    </div>
  </nav>
  <div class="col s12 m7">
  <h2 class="header">Welcome</h2>
  <div class="card horizontal">
    <div class="card-image">
      <img src="http://silhouettesfree.com/holiday-and-festive/saint-patrick-s-day/comic-silhouette-image-2.png">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <p><div id="userName"><%= user.displayName %> </div></p>
        <p><div id="message"></div></p>
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>
</div>
<ul id="drafts" class="collection"></ul>
<div id="userId" style="display:none;"><%= user.id %></div>
  <script>
  //set API endpoint
  var apiEndpoint = "https://cm2qniz6nj.execute-api.us-west-2.amazonaws.com/alpha/users";

  //get user ID from div
  var userID = $( "#userId" ).html();

  //creat a new user
  function createNewUser(){
    var userName = $( "#userName" ).html();
    var myObj = {};
    myObj["comic-cube"] = userID;
    myObj["userName"] = userName;
    myObj["recordType"] = 'user';
    $.ajax({
    type: "POST",
    url: apiEndpoint,
    processData: false,
    contentType: 'application/json',
    data: JSON.stringify(myObj),
    success: function(r) {
      $("#message").html('New user created');
    }
    });

  }


  //call API for users to check db for user ID
  $.ajax({url: apiEndpoint+'?comic-cube='+userID, success: function(result){

    if (result != null){
      console.log(result);
      var drafts = result['draft']['values'];
      drafts.forEach(function(element) {
        console.log(element);
        $( "#drafts" ).append( '<li class="collection-item" style="min-height: 60px;"><strong>comic Draft Name:</strong> '+element+'<a href="drafts?id='+userID+'&draft='+element+'" class="waves-effect waves-light btn right">Open</a></li>' );
      });

    }
    else{
      $("#message").html('Comic Cube user not found<br /><br />Would like to create a new user?<br /></br><button class="btn waves-effect waves-light" type="submit" name="action" onClick="createNewUser()">Submit<i class="material-icons right">send</i></button>');
    }

    }});
  </script>
  <style>
    .right{float:right;}
  </style>
</main>
</body>
</html>
